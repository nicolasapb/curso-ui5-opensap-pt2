<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout">
    <ResponsivePopover
        id="DimensionPopover"
        title="{i18n>PopoverTitle}"
        class="sapUiPopupWithPadding"> 
        <content>
            <l:Grid>
                <l:content>
                    <Text 
                        text="{i18n>PopoverGridWidth}: {path: 'Width', formatter: '.formatter.numberUnit'} {DimUnit}" />
                    <Text 
                        text="{i18n>PopoverGridDepth}: {path: 'Depth', formatter: '.formatter.numberUnit'} {DimUnit}" />
                    <Text 
                        text="{i18n>PopoverGridHeight}: {path: 'Height', formatter: '.formatter.numberUnit'} {DimUnit}" />
                    <Text 
                        text="{i18n>PopoverGridWeigth}: {path: 'WeightMeasure', formatter: '.formatter.numberUnit'} {WeightUnit}" />
                </l:content>
            </l:Grid>
        </content>
    </ResponsivePopover>		
</core:FragmentDefinition>            